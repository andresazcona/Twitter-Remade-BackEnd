datasource db {
  provider = "sqlite" // O tu proveedor de base de datos
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id       Int      @id @default(autoincrement())
  email    String   @unique
  password String
  name     String
  username String   @unique
  bio      String?
  image    String? // Asegúrate de que esta línea esté presente
  tweets   Tweet[]
}

model Tweet {
  id      Int      @id @default(autoincrement())
  content String
  image   String?
  userId  Int
  user    User     @relation(fields: [userId], references: [id])
}
